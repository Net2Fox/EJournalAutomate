    <UseWPF>true</UseWPF>
    <ApplicationIcon>Images\favicon.ico</ApplicationIcon>

	<Version>3.0.0</Version>
	<Product>EJournal Automate</Product>
	<AssemblyName>EJournal Automate</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
