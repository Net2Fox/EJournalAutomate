<Window x:Class="EJournalAutomate.Views.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EJournalAutomate.Views.Windows"
        mc:Ignorable="d"
        Title="EJournal Automate" WindowStartupLocation="CenterScreen"
        Height="150" Width="400" ResizeMode="NoResize"
        MaxHeight="150" MaxWidth="400" MinHeight="150" MinWidth="400">

    <StackPanel Orientation="Horizontal" Margin="20,20,0,20">
        <Image Source="/Images/icon.ico" Width="70" Height="70"/>
        <StackPanel Margin="30,0,0,0" VerticalAlignment="Center" Width="260">
            <TextBlock Text="EJournal Automate" FontWeight="Bold"/>
            <TextBlock Text="Программа для просмотра и скачивания писем с ЭлЖур" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="by Net2Fox" FontSize="9"/>
                <TextBlock FontSize="9" Margin="10,0,0,0">
                    <Hyperlink
                        NavigateUri="https://github.com/Net2Fox/EJournalAutomate"
                        RequestNavigate="Hyperlink_RequestNavigate">
                        Исходный код
                    </Hyperlink>
                </TextBlock>
                <TextBlock FontSize="9" Margin="10,0,0,0">
                     <Hyperlink
                        NavigateUri="https://eljur.ru"
                        RequestNavigate="Hyperlink_RequestNavigate">
                        Сайт ЭлЖур
                     </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
