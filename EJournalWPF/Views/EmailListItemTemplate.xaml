<ListBoxItem x:Class="EJournalWPF.Views.EmailListItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EJournalWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="800" Background="LightGray">
    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
        <CheckBox x:Name="EmailCheckBox" IsChecked="False" VerticalAlignment="Center" Margin="0,0,0,0"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10,0,0,0">
            <TextBlock x:Name="SenderTextBlock" Text="{Binding FromUser.LastName}" FontSize="8"/>
            <TextBlock x:Name="SubjectTextBlock" Text="{Binding Subject}" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</ListBoxItem>
