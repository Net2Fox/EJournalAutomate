<Window x:Class="EJournalWPF.AboutWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:EJournalWPF" ResizeMode="NoResize"
mc:Ignorable="d" MaxHeight="150" MaxWidth="400" MinHeight="150" MinWidth="400"
Title="EJournal Desktop" Height="150" Width="400" WindowStartupLocation="CenterScreen">

    <StackPanel Orientation="Horizontal" Margin="20,20,0,20">
        <Image Source="Images/favicon.ico" Width="70" Height="70"/>
        <StackPanel Margin="30,0,0,0" VerticalAlignment="Center" Width="260">
            <TextBlock Text="ЭлЖур Десктоп" FontWeight="Bold"/>
            <TextBlock Text="Программа для просмотра и скачивания писем с ЭлЖур" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="by Net2Fox" FontSize="9"/>
                <TextBlock FontSize="9" Margin="10,0,0,0">
                <Hyperlink
                    NavigateUri="https://github.com/Net2Fox/EJournalDesktop"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    Исходный код
                </Hyperlink>
                </TextBlock>
            </StackPanel>
            
        </StackPanel>
    </StackPanel>
</Window>
